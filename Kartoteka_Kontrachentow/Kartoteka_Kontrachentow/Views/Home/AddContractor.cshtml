@using System.Configuration
@model Kartoteka_Kontrachentow.ViewModels.ContractorViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Dodawanie kontrahenta";
}
<div class="jumbotron">
    <h3>Formularz dodawania kontrahenta</h3>
</div>
<div class="row">
    <div class="col-md-4">
        @using (Html.BeginForm("AddContractor", "Home", FormMethod.Post))
        {
            <div class="form-group">
                @Html.TextBoxFor(model => model.FirstName, new { placeholder = "Imię" })
                @Html.ValidationMessageFor(model => model.FirstName)
            </div>
            <div class="form-group">
                @Html.TextBoxFor(model => model.LastName, new { placeholder = "Nazwisko" })
                @Html.ValidationMessageFor(model => model.LastName)
            </div>
            <div class="form-group">
                @Html.TextBoxFor(model => model.Email, new {placeholder = "Twój e-mail", type = "email"})
                @Html.ValidationMessageFor(model => model.Email)
            </div>
            <div class="form-group">
                @Html.TextBoxFor(model => model.PhoneNumber, new { placeholder = "Numer telefonu"})
                @Html.ValidationMessageFor(model => model.PhoneNumber)
            </div>
            <div class="form-group">
                @Html.TextBoxFor(model => model.NIP, new { placeholder = "NIP"})
                @Html.ValidationMessageFor(model => model.NIP)
            </div>
            @Html.Partial("_AddressPartial")
            <input type="submit" value="Zapisz" class="btn btn-default" />
        }
    </div>
</div>